import csv
import sorter
import writer
import os
import tkinter
from enum import Enum


####### USER INPUT #######
# File containing raw data
CSV_FILE = open("/Users/zack/Desktop/EXPORT.CSV", 'r')
# Directory of output file
RUNSHEET_DIRECTORY_STR = "/Users/zack/Desktop/"
# Runsheet date
DAY_OF_OPERATIONS = "2/20/2016"
##########################

# Shift sorter
s = sorter.sorter(CSV_FILE)

# Create and sort shifts list
shifts = s.sort(s.createShifts(DAY_OF_OPERATIONS))

# Runsheet writer
w = writer.writer()

# Runsheet workbook
w.makeWorkbook(shifts, RUNSHEET_DIRECTORY_STR)

for i in shifts:
    print(i)